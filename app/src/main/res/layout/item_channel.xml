<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:padding="12dp"
  android:background="@color/panel" android:layout_width="match_parent" android:layout_height="wrap_content">
  <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="center_vertical">
    <ImageView android:id="@+id/logo" android:layout_width="36dp" android:layout_height="36dp" android:scaleType="centerCrop" android:layout_marginEnd="10dp" android:background="@color/panel"/>
    <TextView android:id="@+id/name" android:textColor="@color/text" android:textSize="18sp" android:textStyle="bold" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1"/>
    <TextView android:id="@+id/group" android:textColor="@color/muted" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginEnd="8dp"/>
    <TextView android:id="@+id/meta" android:textColor="@color/muted" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
  </LinearLayout>
  <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:gravity="end">
    <Button android:id="@+id/btnFav" android:text="☆" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnPlay" android:text="▶" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="8dp"/>
  </LinearLayout>
</LinearLayout>
