<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent"
  android:background="@color/bg">

  <TextView android:id="@+id/title" android:textColor="@color/text" android:textSize="18sp"
    android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content"
    android:text="Канал"/>

  <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:paddingStart="12dp" android:paddingEnd="12dp">
    <TextView android:id="@+id/nowTitle" android:textColor="@color/text" android:textSize="14sp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Сейчас — "/>
    <ProgressBar android:id="@+id/nowProgress" style="?android:attr/progressBarStyleHorizontal" android:layout_width="match_parent" android:layout_height="4dp"/>
    <TextView android:id="@+id/nextTitle" android:textColor="@color/muted" android:textSize="12sp" android:layout_width="match_parent" android:layout_height="wrap_content" android:paddingTop="4dp" android:text="Далее — "/>
  </LinearLayout>

  <androidx.media3.ui.PlayerView
    android:id="@+id/playerView"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:keepScreenOn="true" />

  <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal" android:padding="12dp">
    <Button android:id="@+id/btnPrev" android:text="⟨" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <Button android:id="@+id/btnNext" android:text="⟩" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="8dp"/>
    <Button android:id="@+id/btnAspect" android:text="Формат" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="8dp"/>
    <SeekBar android:id="@+id/volume" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:max="100" android:layout_marginStart="8dp"/>
    <Button android:id="@+id/btnFav" android:text="☆" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="8dp"/>
    <Button android:id="@+id/btnTracks" android:text="Дорожки" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="8dp"/>
    <Button android:id="@+id/btnPiP" android:text="PiP" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginStart="8dp"/>
  </LinearLayout>
</LinearLayout>
